<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/RootView"
    android:layout_width="-1"
    android:layout_height="-1"
    android:background="@drawable/background_pink"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="-1"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/topbar">

        <TextView
            android:id="@id/title"
            android:layout_width="0dp"
            android:layout_height="-1"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/favorite_names"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="-2"
        android:layout_height="-2"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_male"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/tableftselected"
            android:gravity="center"
            android:text="@string/male"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_female"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/tabrightdefault"
            android:gravity="center"
            android:text="@string/female"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="-1"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="@drawable/topbar"
        android:gravity="center"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lsv_names"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:dividerHeight="0dp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bn_pp_colb"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="-1"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btn_email"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bn_pp_colb"
            android:gravity="center"
            android:text="@string/email"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
