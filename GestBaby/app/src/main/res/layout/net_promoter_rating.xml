<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@id/RootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_pink"
        style="?attr/slipBackground">

    <TextView
            android:textSize="20sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:id="@+id/net_promoter_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:textSize="18sp"
            android:typeface="sans"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:id="@+id/net_promoter_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

    <RadioGroup
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RadioButton
                android:gravity="center_vertical"
                android:id="@+id/net_promoter_rb_0"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:button="@drawable/checkmark"/>

        <RadioButton
                android:gravity="center_vertical"
                android:id="@+id/net_promoter_rb_1"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:button="@drawable/checkmark"/>

