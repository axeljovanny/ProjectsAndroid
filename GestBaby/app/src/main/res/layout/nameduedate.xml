<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="1" android:id="@id/RootView" android:background="@drawable/background_pink" android:layout_width="-1" android:layout_height="-1">
    <ScrollView android:layout_width="-1" android:layout_height="0dp" android:layout_weight="1.0">
        <LinearLayout android:orientation="1" android:layout_width="-1" android:layout_height="-2"
            <LinearLayout android:layout_gravity="10" android:background="@drawable/topbar" android:layout_width="-1" android:layout_height="44dp">
                <TextView android:textSize="22sp" android:textStyle="1" android:textColor="#ffffff" android:gravity="11" android:layout_gravity="11" android:id="@id/title" android:layout_width="-1" android:layout_height="34dp" android:text="@string/name_and_due_date" />
            </LinearLayout>
            <LinearLayout android:gravity="1" android:orientation="1" android:layout_width="-1" android:layout_height="-2"
                <LinearLayout android:gravity="10" android:orientation="0" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="20dp">
                    <TextView android:textSize="18sp" android:textColor="#ba6e87" android:layout_width="-2" android:layout_height="-2" android:layout_marginRight="5dp" android:text="@string/mother_s_name" />
                    <EditText android:textSize="16sp" android:id="@id/motherName" android:layout_width="150dp" android:layout_height="36dp" android:text="" android:singleLine="true" android:inputType="2001" />
                </LinearLayout>
                <LinearLayout android:gravity="10" android:orientation="0" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="10dp">
                    <TextView android:textSize="18sp" android:textColor="#ba6e87" android:layout_width="-2" android:layout_height="-2" android:text="@string/not_pregnant_c" />
                    <CheckBox android:id="@id/notPregnant" android:layout_width="-2" android:layout_height="-2" />
                </LinearLayout>
                <LinearLayout android:gravity="1" android:orientation="1" android:id="@id/dueDateContainer" android:layout_width="-2" android:layout_height="-2"
                    <LinearLayout android:gravity="10" android:orientation="0" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="10dp">
                        <RadioGroup android:orientation="0" android:id="@id/allanyradio" android:layout_width="-2" android:layout_height="-2" android:checkedButton="@id/anyvalue">
                            <RadioButton android:textSize="18sp" android:textColor="#3c3538" android:layout_gravity="5" android:id="@id/duedate" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="0dp" android:checked="true" android:text="@string/due_date_c" />
                            <RadioButton android:textSize="18sp" android:textColor="#3c3538" android:layout_gravity="5" android:id="@id/lmp" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="55dp" android:checked="false" android:text="@string/lmp" />
                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout android:gravity="10" android:orientation="0" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="5dp">
                        <DatePicker android:id="@id/datesel" android:background="@drawable/colb" android:layout_width="-2" android:layout_height="-2" />
                    </LinearLayout>
                    <LinearLayout android:gravity="10" android:orientation="1" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="15dp">
                        <TextView android:textColor="#3c3538" android:gravity="1" android:id="@id/bottomtext1" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/you_entered_your_est_due_date" />
                    </LinearLayout>
                    <LinearLayout android:gravity="10" android:orientation="1" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="0dp">
                        <TextView android:textColor="#3c3538" android:gravity="1" android:id="@id/bottomtext2" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/based_on_this_due_date_your_last_menstrual_period_began_on" />
                    </LinearLayout>
                    <LinearLayout android:gravity="10" android:orientation="1" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="0dp">
                        <TextView android:textColor="#3c3538" android:gravity="1" android:id="@id/bottomtext3" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="11" android:orientation="1" android:id="@id/doneButtonLinearLayout" android:visibility="2" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="10dp">
                <Button android:textStyle="1" android:textColor="#ba6e87" android:gravity="11" android:id="@id/doneButton" android:background="@drawable/bn_community_round_rect_white_grey_state" android:padding="10dp" android:layout_width="250dp" android:layout_height="44dp" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:layout_marginRight="15dp" android:text="@string/done" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include android:layout_width="-1" android:layout_height="50dp" layout="@layout/ad_view" />
</LinearLayout>
