<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="0" style="@style/pinkTopbar">
    <LinearLayout android:background="#00000000" android:layout_width="-1" android:layout_height="-1" android:layout_weight="0.25">
        <ImageButton android:id="@id/profile_slider_button_left" android:background="@drawable/bn_pp_colb" android:visibility="2" android:layout_width="38dp" android:layout_height="@dimen/sliderButtonHeight" android:layout_marginLeft="8dp" android:layout_marginTop="6dp" android:src="@drawable/lnv_sliding_icon" />
    </LinearLayout>
    <LinearLayout android:gravity="11" android:background="#00000000" android:layout_width="-1" android:layout_height="-1" android:layout_weight="0.25">
        <ImageButton android:id="@id/profile_nav_groups_button" android:background="@drawable/nav_groups_icon" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="2dp" />
    </LinearLayout>
    <LinearLayout android:gravity="11" android:background="#00000000" android:layout_width="-1" android:layout_height="-1" android:layout_weight="0.25">
        <ImageButton android:id="@id/profile_shop_button" android:background="@drawable/nav_shop_icon" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="2dp" />
    </LinearLayout>
    <LinearLayout android:gravity="5" android:background="#00000000" android:layout_width="-1" android:layout_height="-1" android:layout_weight="0.25">
        <ImageView android:id="@id/profile_share_button" android:background="@drawable/bn_pp_colb" android:layout_width="38dp" android:layout_height="@dimen/sliderButtonHeight" android:layout_marginTop="6dp" android:layout_marginRight="8dp" android:src="@drawable/ic_action_share" />
    </LinearLayout>
</LinearLayout>
