<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="30" android:id="@id/RootView" android:background="@drawable/background_pink" android:layout_width="-1" android:layout_height="-1">
    <LinearLayout android:layout_gravity="10" android:background="@drawable/topbar" android:layout_width="-1" android:layout_height="44dp">
        <TextView android:textSize="22sp" android:textStyle="1" android:textColor="#ffffff" android:gravity="11" android:layout_gravity="11" android:id="@id/title" android:layout_width="-1" android:layout_height="34dp" android:text="@string/photo_details" />
    </LinearLayout>
    <RelativeLayout android:gravity="30" android:paddingTop="60dp" android:layout_width="-1" android:layout_height="-1">
        <LinearLayout android:gravity="1" android:layout_gravity="10" android:orientation="1" android:layout_width="-1" android:layout_height="-1"
            <LinearLayout android:layout_gravity="1" android:layout_width="200dp" android:layout_height="120dp">
                <ImageView android:id="@id/img" android:layout_width="-1" android:layout_height="-1" android:src="@drawable/twitter256x256" />
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="#3c3538" android:paddingTop="12dp" android:layout_width="-2" android:layout_height="-2" android:text="@string/caption" />
            <LinearLayout android:layout_gravity="11" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="-1" android:layout_height="-2">
                <EditText android:gravity="11" android:id="@id/caption" android:layout_width="-1" android:layout_height="-2" android:singleLine="true" android:inputType="4001" />
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="#3c3538" android:paddingTop="13dp" android:layout_width="-2" android:layout_height="-2" android:text="@string/date" />
            <LinearLayout android:layout_gravity="11" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="-1" android:layout_height="-2">
                <Button android:textSize="16dp" android:id="@id/selDate" android:layout_width="-1" android:layout_height="38dp" />
            </LinearLayout>
            <TextView android:textSize="16dp" android:textColor="#3c3538" android:paddingTop="13dp" android:layout_width="-2" android:layout_height="-2" android:text="@string/use_as_body_week_photo" />
            <LinearLayout android:layout_gravity="11" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="-1" android:layout_height="-2">
                <Spinner android:id="@id/bodyWeek" android:layout_width="-1" android:layout_height="38dp" />
            </LinearLayout>
            <CheckBox android:textSize="16dp" android:textColor="#3c3538" android:gravity="11" android:id="@id/profilePhoto" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="11dp" android:text="@string/use_as_profile_photo" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
