<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="1" android:id="@id/RootView" android:background="@drawable/background_pink" android:layout_width="-1" android:layout_height="-1">
    <LinearLayout android:layout_gravity="10" android:background="@drawable/topbar" android:layout_width="-1" android:layout_height="44dp">
        <TextView android:textSize="22sp" android:textStyle="1" android:textColor="#ffffff" android:gravity="11" android:layout_gravity="11" android:id="@id/title" android:layout_width="-1" android:layout_height="34dp" android:text="@string/kick_history" />
    </LinearLayout>
    <LinearLayout android:gravity="1" android:orientation="1" android:layout_width="-1" android:layout_height="0dp" android:layout_weight="1.0">
        <ImageButton android:id="@id/startsession" android:background="@drawable/kicks_new_session_button" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="15dp" />
        <LinearLayout android:orientation="0" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="15dp">
            <TextView android:textColor="#3c3538" android:gravity="11" android:layout_width="0dp" android:layout_height="-2" android:text="@string/date" android:layout_weight="1.0" />
            <TextView android:textColor="#3c3538" android:gravity="11" android:layout_width="0dp" android:layout_height="-2" android:text="@string/start_time" android:layout_weight="1.0" />
            <TextView android:textColor="#3c3538" android:gravity="11" android:layout_width="0dp" android:layout_height="-2" android:text="@string/duration" android:layout_weight="1.0" />
            <TextView android:textColor="#3c3538" android:gravity="11" android:layout_width="0dp" android:layout_height="-2" android:text="@string/kicks" android:layout_weight="1.0" />
        </LinearLayout>
        <ListView android:id="@id/list" android:layout_width="-1" android:layout_height="-1" />
    </LinearLayout>
    <LinearLayout android:gravity="11" android:layout_gravity="11" android:orientation="0" android:background="@drawable/topbar" android:layout_width="-1" android:layout_height="@dimen/nav_bar_height">
        <ImageView android:layout_gravity="10" android:id="@id/discard_image_view" android:background="@drawable/bn_pp_colb" android:layout_width="@dimen/nav_bar_image_button_width" android:layout_height="@dimen/nav_bar_image_button_width" android:layout_marginLeft="@dimen/nav_bar_button_left_right_margin" android:src="@drawable/ic_action_discard" android:contentDescription="@string/delete" />
        <View android:background="0x106000d" android:layout_width="0dp" android:layout_height="@dimen/nav_bar_image_button_width" android:layout_marginRight="@dimen/nav_bar_button_left_right_margin" android:layout_weight="1.0" />
        <ImageView android:layout_gravity="10" android:id="@id/share_image_view" android:background="@drawable/bn_pp_colb" android:layout_width="@dimen/nav_bar_image_button_width" android:layout_height="@dimen/nav_bar_image_button_width" android:layout_marginRight="@dimen/nav_bar_button_left_right_margin" android:src="@drawable/ic_action_share" android:contentDescription="@string/email" />
    </LinearLayout>
</LinearLayout>
