            </LinearLayout>
            <TextView android:textColor="@color/pink_theme_grey" android:gravity="11" android:layout_gravity="11" android:id="@id/weekly_info_days_and_weeks_sample" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="5dp" />
            <TextView android:textSize="18sp" android:textColor="@color/pink_theme_grey" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:text="@string/weekly_info_weeks_and_days_info" />
            <LinearLayout android:gravity="11" android:layout_gravity="11" android:orientation="0" android:layout_width="-1" android:layout_height="-2" android:layout_marginTop="20dp">
                <Button android:textSize="12sp" android:textStyle="1" android:textColor="#ffffff" android:gravity="11" android:layout_gravity="11" android:id="@id/weekly_info_completed" android:background="@drawable/tableftdefault" android:layout_width="140dp" android:layout_height="36dp" android:text="@string/weekly_info_completed" />
                <Button android:textSize="12sp" android:textStyle="1" android:textColor="#ffffff" android:gravity="11" android:layout_gravity="11" android:id="@id/weekly_info_current" android:background="@drawable/tabrightselected" android:layout_width="140dp" android:layout_height="36dp" android:layout_marginTop="0dp" android:text="@string/weekly_info_current" />
            </LinearLayout>
            <TextView android:textColor="@color/pink_theme_grey" android:gravity="11" android:layout_gravity="11" android:id="@id/weekly_info_week_number_sample" android:layout_width="-2" android:layout_height="-2" android:layout_marginTop="5dp" />
            <TextView android:textSize="18sp" android:textColor="@color/pink_theme_grey" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:text="@string/weekly_info_week_number_info" />
        </LinearLayout>
    </ScrollView>
    <include android:layout_width="-1" android:layout_height="50dp" layout="@layout/ad_view" />
</LinearLayout>
