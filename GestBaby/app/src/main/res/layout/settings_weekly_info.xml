<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@id/RootView"
        android:background="@drawable/background_pink"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@drawable/topbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_x="0dp"
            android:layout_y="0dp">

        <TextView
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/title"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="@string/info_week"/>
    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <Button
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/weekly_info_current_day"
                android:background="@drawable/tableftdefault"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:text="@string/current_day"/>

        <Button
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/weekly_info_days_past"
                android:background="@drawable/tabrightselected"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:layout_marginTop="0dp"
                android:text="@string/info_past"/>
    </LinearLayout>

    <TextView
            android:textColor="@color/pink_theme_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/weekly_info_days_and_weeks_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

    <TextView
            android:textSize="18sp"
            android:textColor="@color/pink_theme_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/info_week"/>

    <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <Button
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/weekly_info_completed"
                android:background="@drawable/tableftdefault"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:text="@string/complete_info"/>

        <Button
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/weekly_info_current"
                android:background="@drawable/tabrightselected"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:layout_marginTop="0dp"
                android:text="@string/current_info"/>
    </LinearLayout>

    <TextView
            android:textColor="@color/pink_theme_grey"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/weekly_info_week_number_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

    <TextView
            android:textSize="18sp"
            android:textColor="@color/pink_theme_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/info_number"/>
</LinearLayout>
        </ScrollView>

        </LinearLayout>
