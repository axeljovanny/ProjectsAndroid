<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/RootView"
    android:layout_width="-1"
    android:layout_height="-1"
    android:background="@drawable/background_pink"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="-1"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/topbar">

        <View
            android:layout_width="80dp"
            android:layout_height="-1"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="-1"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/edit_name"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/tableftselected"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btn_save_right"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/tabrightselected"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <ScrollView
        android:layout_width="-1"
        android:layout_height="-2">

        <LinearLayout
            android:layout_width="-1"
            android:layout_height="-2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_baby_name"
                android:layout_width="-2"
                android:layout_height="-2"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="200dp"
                android:layout_height="-2"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@id/txv_baby_name"
                android:layout_width="-2"
                android:layout_height="-2"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/gender"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="-2"
                android:layout_height="-2"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_male"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tableftselected"
                    android:gravity="center"
                    android:text="@string/male"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_female"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/tabrightdefault"
                    android:gravity="center"
                    android:text="@string/female"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
