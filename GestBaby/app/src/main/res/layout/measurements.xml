<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@id/RootView"
        android:background="@drawable/background_pink"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@drawable/topbar"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/title"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="@string/measures"/>
    </LinearLayout>

    <LinearLayout
            android:gravity="clip_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <TextView
                android:textStyle="bold"
                android:textColor="#ba6e87"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pre_measures"/>

        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bordered"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp">

        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textStyle="bold"
                    android:textColor="#ba6e87"
                    android:gravity="right"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weigth"/>

            <EditText
                    android:textSize="13sp"
                    android:id="@+id/initialWeight"
                    android:layout_width="70dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="20dp"
                    android:inputType="numberDecimal"/>

            <Button
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/weightLb"
                    android:background="@drawable/tableftdefault"
                    android:layout_width="55dp"
                    android:layout_height="26dp"
                    android:text="@string/weight_lb"/>

            <Button
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/weightKg"
                    android:background="@drawable/tabrightselected"
                    android:layout_width="55dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/weight_kg"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <TextView
                android:textStyle="bold"
                android:textColor="#ba6e87"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/height"/>

        <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bordered"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp">

        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/height_cm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textStyle="bold"
                    android:textColor="#ba6e87"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/centimeters"/>

            <EditText
                    android:textSize="13sp"
                    android:id="@+id/initialCentimeters"
                    android:layout_width="70dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="20dp"
                    android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/height_in"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textStyle="bold"
                    android:textColor="#ba6e87"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pies"/>

            <EditText
                    android:textSize="13sp"
                    android:id="@+id/initialFeet"
                    android:layout_width="60dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="20dp"
                    android:inputType="numberDecimal"/>

            <TextView
                    android:textStyle="bold"
                    android:textColor="#ba6e87"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inches"/>

            <EditText
                    android:textSize="13sp"
                    android:id="@+id/initialInches"
                    android:layout_width="60dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="20dp"
                    android:inputType="numberDecimal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<LinearLayout
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp">
<TextView
        android:textStyle="bold"
        android:textColor="#ba6e87"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_settings"/>

<LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/bordered"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="14dp">

<LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:textStyle="bold"
            android:textColor="#ba6e87"
            android:gravity="left"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="@string/weight_units"/>

    <Button
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/weightUnitsLb"
            android:background="@drawable/tableftdefault"
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:text="@string/lbs"/>

    <Button
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/weightUnitsKg"
            android:background="@drawable/tabrightselected"
            android:layout_width="55dp"
            android:layout_height="26dp"
            android:text="@string/kg"/>
</LinearLayout>

<LinearLayout
        android:orientation="horizontal"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="1dp"/>

<LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:textStyle="bold"
            android:textColor="#ba6e87"
            android:gravity="left"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="@string/length_c"/>

    <Button
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/lengthUnitsIn"
            android:background="@drawable/tableftdefault"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:text="@string/in"/>

    <Button
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/lengthUnitsCm"
            android:background="@drawable/tabrightselected"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:text="@string/cm"/>
</LinearLayout>
</LinearLayout>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        </ScrollView>
<include
android:layout_width="match_parent"
android:layout_height="50dp"
layout="@layout/ad_view"/>
        </LinearLayout>
