<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/ppGlossyButtonStart" android:endColor="@color/ppGlossyButtonStart" android:angle="90.0" android:type="linear" android:centerColor="@color/ppGlossyButtonEnd" />
            <stroke android:width="2px" android:color="@color/ppGlossyButtonStroke" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/ppGlossyButtonStart" android:endColor="@color/ppGlossyButtonEnd" android:angle="90.0" android:type="linear" android:centerColor="@color/ppGlossyButtonCenter" />
            <stroke android:width="2px" android:color="@color/ppGlossyButtonStroke" />
        </shape>
    </item>
</selector>
